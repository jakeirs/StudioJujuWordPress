include pug/_mixins  

section#contact.page-section.page-section--last( data-matching-link=".contact-link" )
  .row
    .col-medium-6.background--dark
      .wrapper.wrapper--left.wrapper--contact
        .row--grid.row--center-vertical
          .col-large-6
            .contact-details
              +phpEcho( " wpautop( get_option( 'address_field' ) )" )
          .col-large-6.contact-form  
            +phpEcho(" do_shortcode( get_option( 'form_field' ) ) ")
            //- form.contact-form  
              fieldset
                input#email.input(name="email" type="email" placeholder="your email" )
                textarea#message.input.input--textarea(name="name" placeholder="your message" )

    .col-medium-6
      .wrapper.wrapper--right.wrapper--map
        #map
        script.
          var map;
          function initMap() {
            map = new google.maps.Map(document.getElementById('map'), {
              center: {lat: 51.5064012, lng: -0.1345676},
              zoom: 15
            });
          }   

footer.footer
