include assets/img/glitch/buttons.svg
include template-parts/photoswipe

script( src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDzIsA0S_k4NKfSUzhvo98IK89_70fVpjA&callback=initMap" async defer )
